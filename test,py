import random 
import string

def robot_parrot(phrase):

    twists = ["normal", "uppercase", "lowercase", "gibberish"]
    twists = random.choice(twists)

    if twists == "normal":
        return phrase
    elif twists == "uppercase":
        return phrase.upper()
    elif twists == "lowercase":
        return phrase.lower()
    elif twists == "gibberish":
        gibberrish_type = random.choice(["reverse", "replace_vowels"])

        if gibberrish_type == "reverse":
            return phrase [::-1]
        elif gibberrish_type == "replace_vowls":
            vowels = 'aeiouAEIOU'
            consonants = ''.join([c for c in string.ascii_letters if c.lower() not in 'aeiou'])
            result = ''

            for char in phrase:
                if  char in vowels:
                    result+random.choice(consonants)
                else:
                    result += char
                    return result
for _ in range(5):
    print(robot_parrot("Hello, I'm your parrot!"))

